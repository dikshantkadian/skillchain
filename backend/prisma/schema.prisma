generator client {
  provider = "prisma-client-js"
  // Force Prisma to use the binary engine, which is more compatible with Vercel
  engineType = "binary"
  // Add binary targets for Vercel's Linux environment for broad compatibility
  binaryTargets = ["native", "debian-openssl-1.1.x", "rhel-openssl-1.1.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("PRISMA_DATABASE_URL")
}

model User {
  id                   String        @id @default(uuid())
  email                String        @unique
  password             String
  name                 String?
  walletAddress        String?       @unique
  role                 Role
  certificatesIssued   Certificate[] @relation("IssuedBy")
  certificatesReceived Certificate[] @relation("ReceivedBy")
}

model Certificate {
  id              String   @id @default(uuid())
  title           String
  description     String
  issueDate       DateTime @default(now())
  transactionHash String   @unique
  fileHash        String   @unique
  ipfsCid         String   @unique
  institution     User     @relation("IssuedBy", fields: [institutionId], references: [id])
  institutionId   String
  student         User     @relation("ReceivedBy", fields: [studentId], references: [id])
  studentId       String
}

enum Role {
  STUDENT
  INSTITUTION
  RECRUITER
}

