generator client {
  provider      = "prisma-client-js"
  engineType    = "node-api"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("PRISMA_DATABASE_URL")
}

model User {
  id            String    @id @default(uuid())
  email         String    @unique
  password      String
  name          String?
  walletAddress String?   @unique
  role          Role
  certificatesIssued   Certificate[] @relation("IssuedBy")
  certificatesReceived Certificate[] @relation("ReceivedBy")
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Certificate {
  id              String   @id @default(uuid())
  title           String
  description     String
  issueDate       DateTime @default(now())
  transactionHash String   @unique
  fileHash        String   @unique
  ipfsCid         String   @unique
  institution     User     @relation("IssuedBy", fields: [institutionId], references: [id])
  institutionId   String
  student         User     @relation("ReceivedBy", fields: [studentId], references: [id])
  studentId       String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

enum Role {
  STUDENT
  INSTITUTION
  RECRUITER
}
